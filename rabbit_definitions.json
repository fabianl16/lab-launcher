{
  "policies": [
    {
      "vhost": "/",
      "name": "dlx-policy",
      "pattern": "^simulations_queue$",
      "apply-to": "queues",
      "definition": {
        "dead-letter-exchange": "dlx.exchange",
        "dead-letter-routing-key": "dlx.routing"
      }
    },
    {
      "vhost": "/",
      "name": "dlx-policy-minio-upload",
      "pattern": "^minio_upload_queue$",
      "apply-to": "queues",
      "definition": {
        "dead-letter-exchange": "dlx.exchange",
        "dead-letter-routing-key": "dlx.routing.minio"
      }
    }
  ],
  "queues": [
    {
      "name": "simulations_queue",
      "vhost": "/",
      "durable": true
    },
    {
      "name": "simulations_queue.dlx",
      "vhost": "/",
      "durable": true
    },
    {
      "name": "minio_upload_queue",
      "vhost": "/",
      "durable": true
    },
    {
      "name": "minio_upload_queue.dlx",
      "vhost": "/",
      "durable": true
    }
  ],
  "exchanges": [
    {
      "name": "dlx.exchange",
      "vhost": "/",
      "type": "direct",
      "durable": true
    }
  ],
  "bindings": [
    {
      "source": "dlx.exchange",
      "vhost": "/",
      "destination": "simulations_queue.dlx",
      "destination_type": "queue",
      "routing_key": "dlx.routing"
    },
    {
      "source": "dlx.exchange",
      "vhost": "/",
      "destination": "minio_upload_queue.dlx",
      "destination_type": "queue",
      "routing_key": "dlx.routing.minio"
    }
  ]
}
